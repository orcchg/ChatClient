<resources>

    <style name="ChatMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChatMessage.Text">
        <item name="android:singleLine">false</item>
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_description_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ChatMessage.Title">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="ChatMessage.Description">
        <item name="android:textSize">@dimen/text_description_size</item>
        <item name="android:textColor">@color/text_description</item>
    </style>

    <style name="error_view">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
